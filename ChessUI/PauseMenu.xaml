<UserControl x:Class="ChessUI.PauseMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Width="275" Height="125" Style="{StaticResource BorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.ColumnSpan="2" Text="- Вайбик" Style="{StaticResource TextStyle}" FontSize="28"/>

            <Button Grid.Row="2" Content="Ехала" Style="{StaticResource ButtonStyle}" Height="30" Width="80" Click="Continue_Clik"/>

            <Button Grid.Row="2" Grid.Column="1" Content="Рестарт" Style="{StaticResource ButtonStyle}" Height="30" Width="80" Click="Reatart_Clik"/>

        </Grid>
    </Border>
</UserControl>
